@model SOSTransito.Models.ProcessoCNH

@{
    ViewData["Title"] = "Cadastrar Processo da CNH";
}

<h1> Cadastro</h1>

<h4>Processo da CNH - @ViewBag.CNH <i class="fas fa-file-powerpoint"></i></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="CNHId" hidden class="form-control" asp-items="ViewBag.CNHId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StatusCNH" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-toggle-on"></i></div>
                    </div>
                    <select asp-for="StatusCNH" class="form-control">
                        <option value="" disabled selected>Selecione o status da CNH...</option>
                        <option value="Regularizada">Regularizada</option>
                        <option value="Bloqueada">Bloqueada</option>
                        <option value="Suspensa">Suspensa</option>
                        <option value="Cassada">Cassada</option>
                        <option value="Reciclagem">Reciclagem</option>
                        <option value="Reabilitação">Reabilitação</option>
                    </select>
                </div>
                <span asp-validation-for="StatusCNH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processo" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-balance-scale"></i></div>
                    </div>
                    <select asp-for="Processo" class="form-control">
                        <option value="" disabled selected>Selecione a etapa do processo...</option>
                        <option value="DETRAN">DETRAN</option>
                        <option value="JARI">JARI</option>
                        <option value="CETRAN">CETRAN</option>
                    </select>
                </div>
                <span asp-validation-for="Processo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prazo" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-calendar-check"></i></div>
                    </div>
                    <input asp-for="Prazo" class="form-control" placeholder="Escolha a data de prazo" />
                </div>
                <span asp-validation-for="Prazo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="/CNH/Index" class="btn btn-danger"><i class="far fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-success save"><i class="fas fa-save"></i> Confirmar</button>
                </div>
            </div>
        </form>
    </div>
</div>


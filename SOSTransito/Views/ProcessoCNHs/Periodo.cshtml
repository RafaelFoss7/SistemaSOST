@model SOSTransito.Models.ProcessoCNH

@{
    ViewData["Title"] = "Definir Periodo de Suspensão";
}

<div class="modal-header">
    <h5 class="modal-title"><i class="fas fa-balance-scale-right"></i> Periodo de Suspensão - CNH @ViewBag.CNH</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@using (Html.BeginForm("DefinirPeriodo", "ProcessoCNHs", FormMethod.Post, new { id = "myform" }))
{
<div class="modal-body">
    <input type="hidden" asp-for="ProcessoCNHId" />
    <input type="hidden" asp-for="CNHId" />
    <input type="hidden" asp-for="StatusCNH" />
    <input type="hidden" asp-for="Processo" />
    <input type="hidden" asp-for="Prazo" />
    <input type="hidden" asp-for="StatusSistema" />
    <input type="hidden" asp-for="LocalizadorHash" />

    <input style="display:none" value="@ViewBag.ProcessoCNHId" id="id" name="id" />

    <div class="form-group">
        <label asp-for="De" class="control-label"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-calendar-day"></i></div>
            </div>
            <input asp-for="De" class="form-control" placeholder="Selecione a data de suspensão (de)..." />
        </div>
        <span asp-validation-for="De" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ate" class="control-label"></label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-calendar-day"></i></div>
            </div>
            <input asp-for="Ate" class="form-control" placeholder="Selecione a data de suspensão (até)..." />
        </div>
        <span asp-validation-for="Ate" class="text-danger"></span>
    </div>

</div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="far fa-times-circle"></i> Cancelar</button>
        <button type="submit" class="btn btn-success save"><i class="far fa-check-circle"></i> Confirmar</button>
    </div>
}

@model SOSTransito.Models.ProcessoCNH

@{
    ViewData["Title"] = "Finalizar Processo";
}

<div class="modal-header">
    <h5 class="modal-title"><i class="fas fa-balance-scale-right"></i> Finalizar Processo da CNH - @ViewBag.CNH</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@using (Html.BeginForm("FinalizarProcesso", "ProcessoCNHs", FormMethod.Post, new { id = "myform" }))
{
    <div class="modal-body">
        <input type="hidden" asp-for="ProcessoCNHId" />
        <input type="hidden" asp-for="CNHId" />
        <input type="hidden" asp-for="StatusCNH" />
        <input type="hidden" asp-for="Prazo" />
        <input type="hidden" asp-for="De" />
        <input type="hidden" asp-for="Ate" />
        <input type="hidden" asp-for="StatusSistema" />
        <input type="hidden" asp-for="LocalizadorHash" />

        <input style="display:none" value="@ViewBag.ProcessoCNHId" id="id" name="id" />

        <div class="form-group">
            <label asp-for="Processo" class="control-label"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-arrow-alt-circle-down"></i></div>
                </div>
                <select asp-for="Processo" class="form-control">
                    <option value="" disabled>Selecione a etapa do processo...</option>
                    <option value="Deferido"> Deferido</option>
                    <option value="Indeferido"> Indeferido</option>
                </select>
            </div>
            <span asp-validation-for="Processo" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="far fa-times-circle"></i> Cancelar</button>
        <button type="submit" class="btn btn-success save"><i class="far fa-check-circle"></i> Confirmar</button>
    </div>
}

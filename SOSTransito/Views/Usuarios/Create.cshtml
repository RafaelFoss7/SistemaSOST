@model SOSTransito.Models.Usuario

@{
    ViewData["Title"] = "Cadastrar Usuário";
}

<h1>Cadastrar</h1>

<h4>Usuário <i class="fas fa-user-plus"></i></h4>
<strong class="text-warning"> @TempData["message"]</strong>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-user"></i></div>
                    </div>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome..." />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-chalkboard-teacher"></i></div>
                    </div>
                    <select asp-for="Tipo" class="form-control">
                        <option value="" disabled selected>Selecione o tipo de acesso...</option>
                        <option value="ADM">Administrador</option>
                        <option value="SCT">Secretário(a)</option>
                    </select>
                </div>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-envelope-open-text"></i></div>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Digite o e-mail..." />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-key"></i></div>
                    </div>
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Digite a senha..." />
                </div>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirmar Senha</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-key"></i></div>
                    </div>
                    <input name="ConfirmSenha" type="password" class="form-control" placeholder="Confirme a senha..." />
                </div>
                <span class="text-danger">@ViewBag.ConfirmSenha</span>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="/Usuarios/Index" class="btn btn-danger"><i class="far fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-success save"><i class="fas fa-save"></i> Confirmar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

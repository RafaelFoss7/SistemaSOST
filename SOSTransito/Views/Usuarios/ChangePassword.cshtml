@model SOSTransito.Models.Usuario

@{
    ViewData["Title"] = "Alterar senha";
}

<h1>Alterar Senha</h1>

<h4>Usuário <i class="fas fa-user-lock"></i></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsuarioID" />
            <input type="hidden" asp-for="Nome" />
            <input type="hidden" asp-for="Tipo" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="StatusSistema" />
            <input type="hidden" asp-for="LocalizadorHash" />

            <div class="form-group">
                <label class="control-label">Nova Senha</label>
                <div class="input-group mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-key"></i></div>
                        </div>
                        <input asp-for="Senha" type="password" id="senha" class="form-control" placeholder="Digite a senha..." />
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <input type="checkbox" onclick="ClickSCheck()" id="senhaCheck" aria-label="Chebox para permitir input text" title="Exibir Senha">
                            </div>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Confirmar Senha</label>
                <div class="input-group mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text" id="btnGroupAddon"><i class="fas fa-key"></i></div>
                        </div>
                        <input name="ConfirmSenha" type="password" id="ConfirmSenha" class="form-control" placeholder="Confirme a senha..." />
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <input type="checkbox" onclick="ClickSCCheck()" id="senhaCCheck" aria-label="Chebox para permitir input text" title="Exibir Senha">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="/Usuarios/Index" class="btn btn-danger"><i class="far fa-times-circle"></i> Cancelar</a>
                    <button type="submit" class="btn btn-success save"><i class="fas fa-save"></i> Confirmar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function ClickSCheck() {
            let checkbox = document.getElementById('senhaCheck');
            if (checkbox.checked) {
                $("#senha").attr("type", "text");
            } else {
                $("#senha").attr("type", "password");
            }
        }
        function ClickSCCheck() {
            let checkbox = document.getElementById('senhaCCheck');
            if (checkbox.checked) {
                $("#ConfirmSenha").attr("type", "text");
            } else {
                $("#ConfirmSenha").attr("type", "password");
            }
        }
    </script>

}

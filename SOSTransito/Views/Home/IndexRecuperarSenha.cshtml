
@{
    ViewData["Title"] = "Recuperar Senha";
    var error = TempData["error"];
}

<h1><i class="fas fa-paper-plane"></i> Recuperar Senha de Acesso</h1>

@if (TempData["message"] != null)
{
    if (error == null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["message"]
        </div>
    }
    else
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["message"]
        </div>
    }
}
<hr />
<form asp-action="IndexRecuperarSenha" method="post">
    <label> Digite seu e-mail para alteração de nova senha:</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-paper-plane"></i></div>
        </div>
        <input class="form-control col-md-6" type="text" name="email" placeholder="Digite seu e-mail para alteração de senha..." />
    </div>
    <br />
    <a href="/Home/Index" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Voltar</a>
    <button type="submit" class="btn btn-success save"><i class="far fa-check-circle"></i> Confirmar</button>
</form>
<hr />

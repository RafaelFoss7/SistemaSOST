<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vatate SOSTransito</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/minty/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/images/VatateSOSTransitoSemFundo.png" width="50" height="50" title="Página Inicial - Vatate Trânsito" /> Vatate Trânsito</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("ADM"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user-tie"></i> Administrativo</a>
                                    <div class="dropdown-menu" data-bs-popper="none">
                                        <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index"><i class="fas fa-users"></i> Usuários</a>
                                        <a class="dropdown-item" asp-controller="Localidades" asp-action="Index"><i class="fas fa-globe-americas"></i> Localidades</a>
                                        <a class="dropdown-item" asp-controller="Atribuicao_Localidade" asp-action="Index"><i class="fas fa-street-view"></i> Atribuições</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user-clock"></i> Atendimento</a>
                                    <div class="dropdown-menu" data-bs-popper="none">
                                        <a class="dropdown-item" asp-controller="Clientes" asp-action="Index"><i class="fas fa-user-friends"></i> Clientes</a>
                                        <a class="dropdown-item" asp-controller="CNH" asp-action="Index"><i class="fas fa-id-card"></i> CNH</a>
                                        <a class="dropdown-item" asp-controller="Veiculos" asp-action="Index"><i class="fas fa-car-alt"></i> Veículos</a>
                                        <a class="dropdown-item" asp-controller="ProcessoCNHs" asp-action="Index"><i class="fas fa-file-powerpoint"></i> Processos CNH</a>
                                        <a class="dropdown-item" asp-controller="Multas" asp-action="Index"><i class="fas fa-file-excel"></i> Multas</a>
                                    </div>
                                </li>
                            }
                            if (User.IsInRole("SCT"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user-clock"></i> Atendimento</a>
                                    <div class="dropdown-menu" data-bs-popper="none">
                                        <a class="dropdown-item" asp-controller="Clientes" asp-action="Index"><i class="fas fa-user-friends"></i> Clientes</a>
                                        <a class="dropdown-item" asp-controller="CNH" asp-action="Index"><i class="fas fa-id-card"></i> CNH</a>
                                        <a class="dropdown-item" asp-controller="Veiculos" asp-action="Index"><i class="fas fa-car-alt"></i> Veículos</a>
                                        <a class="dropdown-item" asp-controller="ProcessoCNHs" asp-action="Index"><i class="fas fa-file-powerpoint"></i> Processos CNH</a>
                                        <a class="dropdown-item" asp-controller="Multas" asp-action="Index"><i class="fas fa-file-excel"></i> Multas</a>
                                    </div>
                                </li>
                            }
                         
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user-cog"></i> Olá @User.Identity.Name</a>
                                <div class="dropdown-menu" data-bs-popper="none">
                                    <a class="dropdown-item" asp-controller="Home" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Sair</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Vatate Trânsito
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables.net/jquery.dataTables.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>
    <script src="https://kit.fontawesome.com/a8c27a1ba9.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/jquery.mask/jquery.mask.js"></script>
    <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
    <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
